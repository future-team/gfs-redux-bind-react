{
    "compilerOptions": {
        "outDir": "./lib/",
        "strictNullChecks": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "target": "es3",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/*.spec.ts",
        "node_modules"
    ]
}
